# Database Configuration
MONGODB_URI=mongodb://localhost:27017/everest_restaurant
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/everest_restaurant

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Email Configuration (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com

# Payme Payment Configuration
PAYME_MERCHANT_ID=your_merchant_id
PAYME_SECRET_KEY=your_secret_key
PAYME_TEST_MERCHANT_ID=test_merchant_id
PAYME_TEST_SECRET_KEY=test_secret_key

# Payme URLs
PAYME_BASE_URL=https://test.paycom.uz
PAYME_PRODUCTION_URL=https://checkout.paycom.uz

# Webhook URLs
PAYME_WEBHOOK_URL=https://your-domain.com/api/payments/webhook/payme
PAYME_RETURN_URL=https://your-domain.com/payment/success
PAYME_FAILURE_URL=https://your-domain.com/payment/failure

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=admin@everest.com
ADMIN_PASSWORD=admin123

# Security
BCRYPT_SALT_ROUNDS=12

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=dev_cloudinary_name
CLOUDINARY_API_KEY=dev_cloudinary_key
CLOUDINARY_API_SECRET=dev_cloudinary_secret

# Payment Configuration
PAYMENT_SUCCESS_URL=http://localhost:8080/payment/success
PAYMENT_FAILURE_URL=http://localhost:8080/payment/failure
PAYMENT_WEBHOOK_URL=http://localhost:5000/api/payments/webhook/payme 